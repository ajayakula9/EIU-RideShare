{
  "compileOnSave": false,
  "compilerOptions": {
    "types": ["node"],
    "baseUrl": "./",
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "declaration": false,
    "target": "es5",
  },
  "exclude": [
    "node_modules/*"
  ]
}
